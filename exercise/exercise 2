<html>
    <head>
        <script>
            function cal(){
                let sum=0;
                for ( let i=0; i<1000; i++){
                    if (i%3 == 0 || i%5 == 0)
                    sum = sum+1;

                }
                                        
            document.getElementById('input').innerText= "the sum of multiple of 3 and 5 below 1000 is:"+sum;
        
    
        }    
        </script>
    </head>
    <body>
        <input type="number" id="input">
        <button onclick="cal()">click me</button>
    </body>
</html>